<% include partials/_header %>
<div class="container">
  <div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <form action="/add" method="POST">
                  <div class="form-group">
                    <label for="movieTitle">Movie Title</label>
                    <input type="text" class="form-control" name="movieTitle" placeholder="Movie Title">
                  </div>
                  <div class="form-group">
                      <label for="movieDesc">Movie Description:</label>
                      <input type="text" class="form-control" name="movieDesc" placeholder="Movie Description">          
                  </div>
                  <div class="form-group">
                      <label for="movieReleaseDate">Movie Release Date:</label>
                      <input type="date" class="form-control" name="movieReleaseDate">          
                  </div>
                  <div class="form-group">
                      <label for="movieRuntime">Movie Run Time:</label>
                      <input type="number" class="form-control" min="1" max="23" value="1" name="movieRuntime">          
                  </div>
                  <div class="form-group">
                      <label for="movieCertificate">Movie Certificate:</label>
                      <select class="form-control" name="movieCertificate"> 
                        <option value="N/A">N/A</option>
                        <option value="PG">PG</option>
                        <option value="12">12</option>
                        <option value="12A">12A</option>
                        <option value="15">15</option>
                        <option value="15A">15A</option>
                        <option value="16">16</option>
                        <option value="18">18</option>
                      </select>         
                  </div>
                  <div class="form-group">
                        <label for="movieRating">Movie Rating:</label>
                        <input type="number" class="form-control" min="1" max="5" value="1" name="movieRating">          
                    </div>
                  <div class="form-row">
                    <div class="col-md-6 mx-auto text-center">
                      <button type="submit" class="btn btn-success mx-auto">Submit</button>
                    </div>
                    <div class="col-md-6 mx-auto text-center">
                      <button type="button" class="btn btn-danger mx-auto" onclick="location.href='/'">Cancel</button>
                    </div>
                  </div>
                </form>
            </div>
        </div>
    </div>
  </div>
</div>
<% include partials/_footer %>